{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 4],
      "no-console": "error",
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }]
    },
    "globals": {
        "logger": "writable"
    }
}
